@model Wp.Web.Framework.Models.Admin.WebPageModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBootstrap.cshtml";
}

<h1>Create</h1>

<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row mt-sm-2">
        <nsr-label for="VirtualPath" />
        <div class="col-sm-3">
            <input asp-for="VirtualPath" class="form-control" />
            <span asp-validation-for="VirtualPath" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-sm-2">
        <nsr-label for="NavigationName" />
        <div class="col-sm-3">
            <input asp-for="NavigationName" class="form-control" />
            <span asp-validation-for="NavigationName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-sm-2">
        <nsr-label for="DisplayOrder" />
        <div class="col-sm-3">
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-sm-2">
        <nsr-label for="Visible" />
        <div class="col-sm-3">
            @Html.CheckBoxFor(model => model.Visible)
        </div>
    </div>
    <div class="form-group row mt-sm-2">
        <nsr-label for="AllowAnonymousAccess" />
        <div class="col-sm-3">
            @Html.CheckBoxFor(model => model.AllowAnonymousAccess)
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-3 col-sm-3 text-right">
            <a asp-action="Index">Back to List</a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>

</form>



